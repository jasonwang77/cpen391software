#define size 20
#include <stdio.h>

void updateLineChart(int *x, int *y, int x_val, int y_val){
	int i;
		printf("Original value:\n");
	for(i = 0;i<size;i++){
		printf("%d,",x[i]);
		printf("%d\n",y[i]);
	}
	printf("New value:\n");
	for(i = 0;i<size;i++){
		if(i!=size-1){
			x[i] = x[i+1];
			y[i] = y[i+1];
		}else{
			x[i] = x_val;
			y[i] = y_val;
		}
		printf("%d,",x[i]);
		printf("%d\n",y[i]);
	}
}

int main(void){

	int x[size] = {0}; //Array to keep track of x, y points.
	int y[size] = {0};
	int i = 0;
	for(i=0;i<size*3;i++){
		updateLineChart(x,y,i,1000-i); //Call this function to update arrays.
	}
  /*
  A loop to print out each dot from arrays.
  */
	return 0;
}
